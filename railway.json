{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "railway.dockerfile",
    "watchPatterns": [
      "src/**",
      "docker/**",
      "railway.dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "/bin/bash /usr/local/bin/start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}